<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pkg_bg"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="2dp"
        android:elevation="6dp"
        app:srcCompat="@drawable/banner_a" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/fname_input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="@color/accent"
        android:background="@drawable/top_rounded_rect">

        <EditText
            android:id="@+id/firstName"
            android:layout_width="match_parent"
            android:layout_height="@dimen/editHeight"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp"
            android:hint="@string/firstname"
            android:inputType="textEmailAddress"
            android:paddingLeft="10dp"
            android:textColor="@color/primary_text"
            android:textColorHint="@color/secondary_text" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/lname_input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="@color/accent"
        android:background="@drawable/top_rounded_rect">

        <EditText
            android:id="@+id/lastName"
            android:layout_width="match_parent"
            android:layout_height="@dimen/editHeight"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp"
            android:hint="@string/lastname"
            android:inputType="textEmailAddress"
            android:paddingLeft="10dp"
            android:textColor="@color/primary_text"
            android:textColorHint="@color/secondary_text" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/username_input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="@color/accent"
        android:background="@drawable/top_rounded_rect">


        <EditText
            android:id="@+id/regusername"
            android:layout_width="match_parent"
            android:layout_height="@dimen/editHeight"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp"
            android:hint="@string/username"
            android:paddingLeft="10dp"
            android:textColor="@color/primary_text"
            android:textColorHint="@color/secondary_text" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/email_input_layout"
        android:layout_width="match_parent"
        android:textColorHint="@color/accent"
        android:layout_height="wrap_content"
        android:background="@drawable/top_rounded_rect">

        <EditText
            android:id="@+id/regemail"
            android:layout_width="match_parent"
            android:layout_height="@dimen/editHeight"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp"
            android:hint="@string/email"
            android:inputType="textEmailAddress"
            android:paddingLeft="10dp"
            android:textColor="@color/primary_text"
            android:textColorHint="@color/secondary_text" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/travelid_input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="@color/accent"
        android:background="@drawable/top_rounded_rect">

        <EditText
            android:id="@+id/regTravelId"
            android:layout_width="match_parent"
            android:layout_height="@dimen/editHeight"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp"
            android:hint="@string/travel_id"
            android:inputType="phone"
            android:paddingLeft="10dp"
            android:textColor="@color/primary_text"
            android:textColorHint="@color/secondary_text" />
    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/registerUser"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:elevation="6dp"
        app:srcCompat="@drawable/ic_arrow_right" />


</LinearLayout>



