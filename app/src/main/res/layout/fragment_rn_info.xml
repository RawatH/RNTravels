<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pkg_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center"
        android:orientation="vertical">


        <TextView
            style="@style/rn_help_header_style"
            android:drawableLeft="@drawable/ic_phone"
            android:text="@string/mobile" />

        <TextView
            android:id="@+id/rn_mobile"
            style="@style/rn_help_value_style"
            android:autoLink="phone"
             />

        <TextView
            style="@style/rn_help_header_style"
            android:drawableLeft="@drawable/ic_phone"
            android:text="@string/landline" />

        <TextView
            android:id="@+id/rn_landline"
            style="@style/rn_help_value_style"
            android:autoLink="phone"
            android:text="@string/rn_landline" />

        <TextView
            style="@style/rn_help_header_style"
            android:drawableLeft="@drawable/ic_emai"
            android:text="@string/email" />

        <TextView
            android:id="@+id/rn_email"
            style="@style/rn_help_value_style"
            android:autoLink="email"
            android:text="@string/rn_email_id" />


        <TextView
            style="@style/rn_help_header_style"
            android:drawableLeft="@drawable/ic_location"
            android:text="@string/corporate_off" />

        <TextView
            android:id="@+id/rn_office_address"
            style="@style/rn_help_value_style"
            android:text="@string/rn_corporate_address" />

        <TextView
            style="@style/rn_help_header_style"
            android:drawableLeft="@drawable/ic_web"
            android:text="@string/website" />

        <TextView
            android:id="@+id/rn_website"
            style="@style/rn_help_value_style"
            android:autoLink="web"
            android:text="@string/web_url" />
    </LinearLayout>

</ScrollView>
