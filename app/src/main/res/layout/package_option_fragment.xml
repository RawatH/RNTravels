<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pkg_bg"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/pkgOptionTitle"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:background="@color/primary_dark"
        android:fontFamily="sans-serif"
        android:gravity="center|bottom"
        android:padding="5dp"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/pkgSubtitle"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@id/pkgOptionTitle"
        android:layout_marginBottom="5dp"
        android:background="@color/primary_dark"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center_horizontal"
        android:textColor="@color/white"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp">

            <TextView
                android:id="@+id/itenary"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/rounded_rect"
                android:drawable="@drawable/itinerary_logo"
                android:elevation="5dp"
                android:fontFamily="sans-serif-condensed"
                android:gravity="center"
                android:onClick="clickEvent"
                android:text="@string/itinerary"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tickets"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/rounded_rect"
                android:elevation="5dp"
                android:fontFamily="sans-serif-condensed"
                android:gravity="center"
                android:onClick="clickEvent"
                android:text="@string/ticket_details"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp">

            <TextView
                android:id="@+id/helpline"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:background="@drawable/rounded_rect"
                android:elevation="5dp"
                android:fontFamily="sans-serif-condensed"
                android:gravity="center"
                android:onClick="clickEvent"
                android:text="@string/rn_helpline"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/emergency"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/rounded_rect"
                android:elevation="5dp"
                android:fontFamily="sans-serif-condensed"
                android:gravity="center"
                android:onClick="clickEvent"
                android:text="@string/emergency_contact"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </LinearLayout>


        <TextView
            android:id="@+id/feedback"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@color/primary_dark"
            android:drawableLeft="@drawable/ic_feedback"
            android:drawablePadding="10dp"
            android:elevation="5dp"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center"
            android:maxLines="1"
            android:onClick="clickEvent"
            android:padding="5dp"
            android:text="@string/feedback"
            android:textColor="@color/white"
            android:textSize="18sp"

            />

        <TextView
            android:id="@+id/boardingPass"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@color/primary_dark"
            android:drawableLeft="@drawable/ic_boarding_pass"
            android:drawablePadding="10dp"
            android:elevation="5dp"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center"
            android:maxLines="1"
            android:onClick="clickEvent"
            android:padding="5dp"
            android:text="@string/boardingPass"
            android:textColor="@color/white"
            android:textSize="18sp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/travelId"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@color/primary_dark"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center"
        android:text="Travel Id :  09876"
        android:textColor="@color/white"
        android:textSize="20sp" />

</RelativeLayout>
